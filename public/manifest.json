{
    "manifest_version": 3,
    "name": "SolvePad",
    "version": "1.0",
    "description": "A structured problem-solving notepad with observations, approaches, and tracking features.",
    "action": {
        "default_title": "Open SolvePad",
        "default_icon": {
            "16": "16.png",
            "128": "128.png"
        }
    },
    "icons": {
        "16": "16.png",
        "128": "128.png"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}